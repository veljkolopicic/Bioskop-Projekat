@using BioskopApp.Data
@model BioskopApp.Data.ProgramOfEvents

@{
    ViewData["Title"] = "Kreiraj događaj";
    var movies = ViewData["Movies"] as List<Movie>;
}

<h2>Kreiraj događaj</h2>
<br/>
<br/>


<h4>Program repertoara</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label">Ime filma</label>
                <select asp-for="MovieId">

                    @foreach (var movie in movies)
                    {
                        <option value="@movie.ID">@movie.Name</option>
                    }


                </select>
            </div>
                <div class="form-group">
        <label asp-for="Date" class="control-label">Datum projekcije</label>
        <input type="date" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label">Vreme</label>
                <input type="time" asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tickets" class="control-label">Ukupan broj karata</label>
                <input asp-for="Tickets" class="form-control" />
                <span asp-validation-for="Tickets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Cena pojedinačne karte</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj događaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak na listu kreiranih događaja</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
