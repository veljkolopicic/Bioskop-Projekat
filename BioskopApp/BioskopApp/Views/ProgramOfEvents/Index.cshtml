@model IEnumerable<BioskopApp.Data.ProgramOfEvents>

@{
    ViewData["Title"] = "Index";
}
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Projekcije</h6>
            </div>
            <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-check"></i>
                </span>
                <span class="text">Nova projekcija</span>
                </a>
            </p>
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Ime filma
                            </th>
                            <th>
                                Datum projekcije
                            </th>
                            <th>
                                Vreme projekcije
                            </th>
                            <th>
                                Ukupan broj karata
                            </th>
                            <th>
                                Cena karte
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Movie.Name)
                        </td>
                        <td>
                            @{var formateddate = item.Date.ToString("dd MMMM yyyy");}
                            @Html.DisplayFor(modelItem => formateddate)
                        </td>
                        <td>
                            @{var formateddate2 = item.Time.ToString("hh:mm tt");}
                            @Html.DisplayFor(modelItem => formateddate2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tickets)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-check"></i>
                            </span>
                            <span class="text">Izmena</span>
                            </a>
                            <div class="my-2"></div>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-info-circle"></i>
                            </span>
                            <span class="text">Detalji</span>
                            </a>
                            <div class="my-2"></div>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-trash"></i>
                            </span>
                            <span class="text">Brisanje</span>
                            </a>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
                
            </div>
          </div>
        </div>
        </div>
</div></div>
    </div>
