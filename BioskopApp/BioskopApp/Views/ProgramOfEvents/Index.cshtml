@model IEnumerable<BioskopApp.Data.ProgramOfEvents>

@{
    ViewData["Title"] = "Index";
}

<h2>Program repertoara</h2>

<p>
    <a asp-action="Create">Kreiraj novi dogadjaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ime filma
            </th>
            <th>
                Datum projekcije
            </th>
            <th>
                Vreme projekcije
            </th>
            <th>
                Ukupan broj karata
            </th>
            <th>
                Cena karte
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.Name)
        </td>
        <td>
             @{var formateddate = item.Date.ToString("dd MMMM yyyy");}
            @Html.DisplayFor(modelItem => formateddate)
        </td>
        <td>
            @{var formateddate2 = item.Time.ToString("hh:mm tt");}
            @Html.DisplayFor(modelItem => formateddate2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tickets)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.ID">Izmeni</a> |
            <a asp-action="Details" asp-route-id="@item.ID">Detalji</a> |
            <a asp-action="Delete" asp-route-id="@item.ID">Obrisi</a>
        </td>
    </tr>
}
    </tbody>
</table>
