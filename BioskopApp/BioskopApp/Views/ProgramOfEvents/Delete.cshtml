@model BioskopApp.Data.ProgramOfEvents

@{
    ViewData["Title"] = "Delete";
}

<h2>Obriši događaj</h2>

<h3>Da li ste sigurni da želite da obrišete događaj?</h3>
<div>
    <h4>ProgramOfEvents</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ime filma
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Name)
        </dd>
        <dt>
            Datum projekcije
        </dt>
        <dd>
            @{var formateddate = Model.Date.ToString("dd MMMM yyyy");}
            @Html.DisplayFor(modelItem => formateddate)
        </dd>
        <dt>
            Vreme projekcije
        </dt>
        <dd>
            @{var formateddate2 = Model.Time.ToString("hh:mm tt");}
            @Html.DisplayFor(modelItem => formateddate2)
        </dd>
        <dt>
            Ukupan broj karata
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tickets)
        </dd>
        <dt>
            Cena karte
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Izbriši" class="btn btn-default" /> |
        <a asp-action="Index">Nazad na listu događaja</a>
    </form>
</div>
