@model IEnumerable<BioskopApp.Data.Movie>

@{
    ViewData["Title"] = "Index";
}


  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Repertoar filmova</h6>
            </div>
            <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-check"></i>
                </span>
                <span class="text">Novi film</span>
                </a>
            </p>
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                        <th>
                            Naziv
                        </th>
                        <!--
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>                        
                        <th>
                            @Html.DisplayNameFor(model => model.Highlighted)
                        </th>
                        !-->
                        <th>
                            Kratki opis
                        </th>
                        <th>
                            Trejler
                        </th>
                        <th>
                            Opis
                        </th>
                        <th>
                            Slika
                        </th>
                        <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    @foreach (var item in Model) {
                    <tr>
                        <td>
                            <div class="table_content">
                                @Html.DisplayFor(modelItem => item.Name)
                            </div>
                        </td>
                        <!--
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.Image)
                            </div>
                        </td>
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.Highlighted)
                            </div>
                        </td>
                        !-->
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.Description)
                            </div>
                        </td>
                        <td>
                            <div class="table_content table_trailer">
                            @Html.DisplayFor(modelItem => item.Trailer)
                            </div>
                        </td>
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.LongDescription)
                            </div>
                        </td>
                        <td>
                            <div class="table_content table_image">
                                <img src="@Html.DisplayFor(modelItem => item.ImageRepertoar)" />
                            </div>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-check"></i>
                            </span>
                            <span class="text">Izmena</span>
                            </a>
                            <div class="my-2"></div>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-info-circle"></i>
                            </span>
                            <span class="text">Detalji</span>
                            </a>
                            <div class="my-2"></div>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-trash"></i>
                            </span>
                            <span class="text">Brisanje</span>
                            </a>
                        </td>
                    </tr>
            }
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->
