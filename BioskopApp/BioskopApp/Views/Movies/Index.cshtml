@model IEnumerable<BioskopApp.Data.Movie>

@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Rezervisane karte</h6>
    </div>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div class="card-body">
        <div class="row">
            <div class="table-responsive">
            <table class="table table-bordered table-large-text" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Highlighted)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Trailer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LongDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageRepertoar)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            <div class="table_content">
                                @Html.DisplayFor(modelItem => item.Name)
                            </div>
                        </td>
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.Image)
                            </div>
                        </td>
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.Highlighted)
                            </div>
                        </td>
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.Description)
                            </div>
                        </td>
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.Trailer)
                            </div>
                        </td>
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.LongDescription)
                            </div>
                        </td>
                        <td>
                            <div class="table_content">
                            @Html.DisplayFor(modelItem => item.ImageRepertoar)
                            </div>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
            }
                </tbody>
        </table>
    </div>
</div>
</div>