@using BioskopApp.Data
@{
    ViewData["Title"] = "Home Page";
    List<Movie> movies = (ViewData["Movies"] as IEnumerable<Movie>).ToList();
    List<Movie> repertoar = (ViewData["Repertoar"] as List<Movie>);
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        @for (int i = 0; i < movies.Count(); i++)
        {
            if (i == 0)
            {
                <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
            }
            else
            {
                <li data-target="#myCarousel" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner" role="listbox">

        @for (int i = 0; i < movies.Count(); i++)
        {
            if (i == 0)
            {
                <div class="item active">
                    <img src="@movies[i].Image" alt="@movies[i].Name" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            @movies[i].Description
                            <a class="btn btn-default" href="#@movies[i].ID">
                                Saznaj vise
                            </a>
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="item">
                    <img src="@movies[i].Image" alt="@movies[i].Name" width="1920" height="1080" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            @movies[i].Description
                            <a class="btn btn-default" href="#@movies[i].ID">
                                Saznaj vise
                            </a>
                        </p>
                    </div>
                </div>
            }

        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<h1>Repertoar filmova</h1>
<br />
<div>
    @foreach (var movie in repertoar)
    {
        <div id="@movie.ID">
            <br />
            <br />
            <br />
            <h2>@movie.Name</h2>
            <img src="@movie.ImageRepertoar" width="400" height="600" style="float: left;" />
            <p style="float: right; width: 400px; height: 600px;">@movie.LongDescription </p>
            <br />
        </div>

        <div>
            &nbsp;
            <br />

            <iframe style="padding: 30px" width="560" height="315" src="@movie.Trailer" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <br />
            <br />
            <br />
        </div>

    }
</div>
